<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.CreateCopaignFragment.SetBreifFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

              <ProgressBar
                    android:id="@+id/progressBar"
                    android:visibility="invisible"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_centerInParent="true"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/bt_back_createcom"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="@color/white"
                android:src="@drawable/ic_baseline_arrow_back_24"
                tools:ignore="SpeakableTextPresentCheck" />

            <com.kofigyan.stateprogressbar.StateProgressBar
                android:id="@+id/your_state_progress_bar_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                app:spb_animateToCurrentProgressState="true"
                app:spb_checkStateCompleted="true"
                app:spb_currentStateDescriptionColor="#F06BF2"
                app:spb_currentStateNumber="two"
                app:spb_maxStateNumber="five"
                app:spb_stateBackgroundColor="#7E7593"

                app:spb_stateDescriptionColor="#7E7593"
                app:spb_stateForegroundColor="#F06BF2"
                app:spb_stateLineThickness="2.8dp"
                app:spb_stateNumberBackgroundColor="#F06BF2"
                app:spb_stateNumberForegroundColor="#7E7593"
                app:spb_stateSize="@dimen/_30sdp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_6sdp"
            android:fontFamily="@font/salsa"
            android:text="@string/setthebreif"
            android:textColor="@color/black"
            android:textSize="@dimen/_20ssp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:fontFamily="@font/salsa"
                android:text="@string/Compaignname"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />

            <EditText
                android:id="@+id/et_Compaign_name"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/salsa"
                android:hint="@string/enterCompaignname"

                android:inputType="textPersonName"
                android:textSize="@dimen/_13ssp"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:fontFamily="@font/salsa"
                android:text="@string/compaigntype"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_compaign_type"
                    android:layout_width="@dimen/_180sdp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/salsa"
                    android:hint="@string/ReadyMakeContent"
                    android:inputType="textPersonName"
                    android:textSize="@dimen/_13ssp"
                    tools:ignore="TouchTargetSizeCheck" />

                <androidx.appcompat.widget.AppCompatSpinner

                    android:id="@+id/spinner"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-25dp"
                    android:entries="@array/Gender_Names" />

                <TextView
                    android:id="@+id/textView233"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/salsa"
                    android:text="@string/Content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8ssp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView33"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:fontFamily="@font/salsa"
                android:text="@string/CompaignDescription"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />

            <EditText
                android:id="@+id/et_Compaign_description"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/salsa"
                android:hint="@string/EnterCompaignDescription"

                android:inputType="textPersonName"
                android:textSize="@dimen/_13ssp"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textView431"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:fontFamily="@font/salsa"
                android:text="@string/CallofAction"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />

            <EditText
                android:id="@+id/et_Call_to_Action"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/salsa"
                android:hint="@string/EnterCallToAction"

                android:inputType="textPersonName"
                android:textSize="@dimen/_13ssp"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

        <TextView

            android:id="@+id/textView3223"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/salsa"
            android:text="@string/Platforms"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_8sdp"
                android:src="@drawable/instagram" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_8sdp"
                android:src="@drawable/facebook" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_8sdp"
                android:src="@drawable/tiktok" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_8sdp"
                android:src="@drawable/youtube" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_8sdp"
                android:src="@drawable/snapchat" />
        </LinearLayout>

        <TextView

            android:id="@+id/textView322323"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/salsa"
            android:text="@string/Prelaoded"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:orientation="horizontal">


            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner2"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_9sdp"
                android:background="@color/gray"
                android:entries="@array/type" />

            <TextView

                android:id="@+id/tv_spinner2_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="56dp"
                android:fontFamily="@font/salsa"
                android:gravity="center"
                android:text="#"
                android:textColor="@color/black"
                android:textSize="@dimen/_15ssp" />

            <EditText
                android:id="@+id/et_PreloadedContent"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginStart="@dimen/_55sdp"
                android:background="@drawable/et_shap"
                android:drawableEnd="@drawable/ic_baseline_add_circle_verysmall"

                android:ems="10"
                android:fontFamily="@font/salsa"
                android:hint="Enter Preloaded Content"
                android:inputType="textPersonName"
                android:textSize="@dimen/_13ssp"
                tools:ignore="TouchTargetSizeCheck" />

            <View

                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@id/tv_spinner2_type"
                android:layout_marginTop="-6dp"
                android:background="#676666" />

        </RelativeLayout>

        <TextView
            android:fontFamily="@font/salsa"

            android:id="@+id/tv_save_at_settheBreif"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@id/text2"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/rectangle_save_comp"
            android:gravity="center"
            android:text="@string/save"
            android:textColor="@color/black"
            android:textSize="@dimen/_18ssp"
           />

        <ImageButton

            android:id="@+id/bt_next_moodBoard"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="bottom|end"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:background="@color/white"
            android:src="@drawable/ic_baseline_arrow_forward_24"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>