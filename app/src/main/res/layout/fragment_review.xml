<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.CreateCopaignFragment.ReviewFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/bt_back_createcom"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="@color/white"
                android:src="@drawable/ic_baseline_arrow_back_24"
                tools:ignore="SpeakableTextPresentCheck" />

            <com.kofigyan.stateprogressbar.StateProgressBar
                android:id="@+id/your_state_progress_bar_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                app:spb_animateToCurrentProgressState="true"
                app:spb_checkStateCompleted="true"
                app:spb_currentStateDescriptionColor="#F06BF2"
                app:spb_currentStateNumber="four"
                app:spb_maxStateNumber="five"
                app:spb_stateBackgroundColor="#7E7593"

                app:spb_stateDescriptionColor="#7E7593"
                app:spb_stateForegroundColor="#F06BF2"
                app:spb_stateLineThickness="2.8dp"
                app:spb_stateNumberBackgroundColor="#F06BF2"
                app:spb_stateNumberForegroundColor="#7E7593"
                app:spb_stateSize="@dimen/_30sdp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView3212"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/salsa"
            android:gravity="center"
            android:text="@string/ReviewAndConfirm"
            android:textColor="@color/black"
            android:textSize="@dimen/_20ssp" />

        <TextView
            android:id="@+id/textView353221342"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_35sdp"
            android:fontFamily="@font/salsa"
            android:text="@string/Whatcreator"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_115sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            app:cardBackgroundColor="#F6E7F2"
            app:cardCornerRadius="@dimen/_15sdp"
            app:cardUseCompatPadding="true">


            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_55sdp"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                app:cardBackgroundColor="#E2B5D6"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardUseCompatPadding="true" />


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            app:cardBackgroundColor="#EFD6E8"
            app:cardCornerRadius="@dimen/_25sdp"
            app:cardUseCompatPadding="true">


            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_160sdp"
                android:layout_height="@dimen/_65sdp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_20sdp"
                app:cardBackgroundColor="#C4C4C4"
                app:cardCornerRadius="@dimen/_11sdp"
                app:cardUseCompatPadding="true" />


        </androidx.cardview.widget.CardView>


        <TextView

            android:id="@+id/tv_save_at_moodboard"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@id/text2"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@drawable/ellipsesave"
            android:gravity="center"
            android:text="@string/save"
            android:textColor="@color/black"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold" />

        <ImageButton

            android:id="@+id/bt_next_interest"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="bottom|end"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:background="@color/white"
            android:src="@drawable/ic_baseline_arrow_forward_24"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>
</FrameLayout>